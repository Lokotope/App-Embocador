@model PruebaASPNETEmbocador.Models.Usuarios

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Assets/css/detalles.css">

<div class="fondoEdit">
    <div class="cabeceraEdit">
        <h2>Detalles del usuario</h2>
    </div>

    <div class="infoUser">
        <hr />
        <dl class="dl-horizontal">
            <dt class="cabeceraUser">
                Nombre de usuario
            </dt>
            <dd style="padding-top: 15px;">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="cabeceraUser">
                ¿El usuario es administrador?
            </dt>
            <dd style="padding-top:15px;">
                @Html.DisplayFor(model => model.IsAdmin)
            </dd>

        </dl>
    </div>

    <div>
        <button class="btnSave">
            <p>
                @Html.ActionLink("Editar usuario", "Edit", new { id = Model.IDUsuario }, new { @style = "color: white;" })
            </p>
        </button>
    </div>
    <div>
        <button class="btnSave">
            <p>
                @Html.ActionLink("Volver atrás", "Index", null, new { @style = "color: white;" })
            </p>
        </button>
    </div>
</div>
