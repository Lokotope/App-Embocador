@model PruebaASPNETEmbocador.Models.Usuarios

@{
    ViewBag.Title = "PanelAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Assets/css/loginAdminOk.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="container-fluid d-flex align-items-center justify-content-center vh-100">
    <div class="contenedorIdUsuario p-5">

        <p>Ha iniciado sesión como: @ViewBag.nombreUsuario</p>
        <br />
        <h3 class="text-center">Panel de administrador</h3>
        <br />

        <div class="containerNav text-center">

            <nav class="barraNavAdmin">
                @Html.ActionLink("Gestionar usuarios", "Index", "Usuarios", new { loginPanel = "admin" }, new { @class = "navLink" })
                @Html.ActionLink("Consultar y gestionar turnos y horarios", "Index", "TurnosHorarios", new { loginPanel = "admin" }, new { @class = "navLink" })
                @Html.ActionLink("Gestionar mi usuario", "Edit", "Usuarios", new { id = Model.IDUsuario, loginPanel = "admin" }, new { @class = "navLink" })
            </nav>

        </div>
        <div class="text-center mt-5 mb-5">
            @using (Html.BeginForm("Logout", "InicioAdmins", FormMethod.Post))
            {
                @Html.Hidden("loginPanel", "admin") <!-- Campo oculto para loginPanel -->
                <button type="submit" class="btnCerrarSesion">Cerrar sesión</button>
            }
        </div>

    </div>
</div>



