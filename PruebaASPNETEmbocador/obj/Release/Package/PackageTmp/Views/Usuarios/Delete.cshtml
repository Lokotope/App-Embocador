@model PruebaASPNETEmbocador.Models.Usuarios

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Assets/css/eliminar.css">

<div class="fondoEliminar">
    <div class="cabeceraEliminar">
        <h2>Eliminar usuario</h2>
    </div>


    <div class="infoUser">
        
        <hr />
        <dl class="dl-horizontal">
            <dt class="cabeceraUser">
                Nombre de usuario
            </dt>

            <dd style="padding-top: 15px;">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt class="cabeceraUser">
                ¿El usuario es administrador?
            </dt>

            <dd style="padding-top: 15px;">
                @Html.DisplayFor(model => model.IsAdmin)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div> 
            <input type="submit" value="Eliminar usuario" class="btnSave"/> 
    </div>

            <div class="form-actions no-color">
                <button class="btnSave">

                    @Html.ActionLink("Volver atrás", "Index", null, new { @style = "color: white;" })

                </button>
            </div>
        }
    </div>
</div>
